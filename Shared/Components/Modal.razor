<div class="modal fade @modalClass" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document" style="@(SueLog?"max-width:70vw":string.Empty)">
        <div class="modal-content" style="@(SueLog?"max-height:90vh;":string.Empty)">
            <div class="modal-header">
                <h5 class="modal-title sue-text">@Title</h5>
                @if (Dismissable)
                {
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                }
            </div>
            <div class="modal-body" style="@(SueLog?"overflow-y:auto;":string.Empty)">
                @Body
            </div>
            <div class="modal-footer">
                @Footer
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade @modalClass"></div>


@code {
    [Parameter]
    public RenderFragment Title { get; set; }

    [Parameter]
    public RenderFragment Body { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }

    [Parameter]
    public bool Dismissable { get; set; } = true;

    [Parameter]
    public bool SueLog { get; set; } = false;

    private string modalDisplay = "none;";
    private string modalClass = "d-none";

    public void Open()
    {
        modalDisplay = "block;";
        modalClass = "show d-block";
        StateHasChanged();
    }

    public void Close()
    {
        modalDisplay = "none";
        modalClass = "d-none";
        StateHasChanged();
    }
    public void SetTitle(RenderFragment newTitle)
    {
        Title = newTitle;
    }
    public void SetBody(RenderFragment newBody)
    {
        Body = newBody;
    }
    public void SetFooter(RenderFragment newFooter)
    {
        Footer = newFooter;
    }
}